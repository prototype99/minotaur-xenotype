<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Ears -->
    <GeneDef ParentName="GeneEarsBase">
    <defName>Ears_Bovine</defName>
    <label>bovine ears</label>
    <description>Carriers of this gene will grow fluffy cow-like ears.</description>
    <iconPath>UI/Icons/Genes/Gene_EarCow</iconPath>
    <renderNodeProperties>
      <li>
        <nodeClass>PawnRenderNode_AttachmentHead</nodeClass>
        <workerClass>PawnRenderNodeWorker_FlipWhenCrawling</workerClass>
        <texPath>Things/Pawn/Humanlike/HeadAttachments/BovineEars/BovineEars</texPath>
        <colorType>Skin</colorType>
        <parentTagDef>Head</parentTagDef>
        <useSkinShader>true</useSkinShader>
        <useRottenColor>true</useRottenColor>
        <rotDrawMode>Fresh, Rotting</rotDrawMode>
        <drawData>
          <defaultData>
            <layer>80</layer>
          </defaultData>
        </drawData>
      </li>
    </renderNodeProperties>
    <symbolPack>
      <prefixSymbols>
        <li><symbol>cow</symbol></li>
        <li><symbol>beef</symbol></li>
      </prefixSymbols>
      <suffixSymbols>
        <li><symbol>cow</symbol></li>
        <li><symbol>beef</symbol></li>
        <li><symbol>ear</symbol></li>
      </suffixSymbols>
    </symbolPack>
  </GeneDef>

  <!-- Horns -->
  <GeneDef ParentName="GeneHeadboneBase">
    <defName>Horns_Bovine</defName>
    <label>Bovine Horns</label>
    <description>Carriers of this gene grow two large, bovine horns protruding from the forehead.</description>
    <iconPath>UI/Icons/Genes/Gene_BovineHorns</iconPath>
    <renderNodeProperties>
      <li>
        <nodeClass>PawnRenderNode_AttachmentHead</nodeClass>
        <workerClass>PawnRenderNodeWorker_FlipWhenCrawling</workerClass>
        <texPaths>
          <li>Things/Pawn/Humanlike/HeadAttachments/Horns/Horns1</li>
          <li>Things/Pawn/Humanlike/HeadAttachments/Horns/Horns2</li>
          <li>Things/Pawn/Humanlike/HeadAttachments/Horns/Horns3</li>
          <li>Things/Pawn/Humanlike/HeadAttachments/Horns/Horns4</li>
          <li>Things/Pawn/Humanlike/HeadAttachments/Horns/Horns5</li>
          <li>Things/Pawn/Humanlike/HeadAttachments/Horns/Horns6</li>
        </texPaths>
        <color>(255, 255, 255)</color>
        <parentTagDef>Head</parentTagDef>
        <drawData>
          <defaultData>
            <layer>70</layer>
          </defaultData>
          <dataNorth>
            <layer>5</layer>
          </dataNorth>
        </drawData>
      </li>
    </renderNodeProperties>
    <symbolPack>
      <prefixSymbols>
        <li><symbol>bovine</symbol></li>
        <li><symbol>cattle</symbol></li>
        <li><symbol>bull</symbol></li>
        <li><symbol>cow</symbol></li>
      </prefixSymbols>
      <suffixSymbols>
        <li><symbol>horn</symbol></li>
      </suffixSymbols>
    </symbolPack>
  </GeneDef>

  <!-- Head -->

    <GeneDef ParentName="GeneJawBase">
    <defName>Head_Bovine</defName>
    <label>bovine head</label>
    <description>Carriers of this gene have a bovine facial structure with an elongated snout.</description>
    <iconPath>UI/Icons/Genes/Gene_BovineHead</iconPath>
    <forcedHeadTypes>
      <li>BovineMaleAverageHeadNormal</li>
      <li>BovineMaleAverageHeadWide</li>
      <li>BovineMaleAverageHeadPointy</li>
      <li>BovineFemaleAverageHeadNormal</li>
      <li>BovineFemaleAverageHeadWide</li>
      <li>BovineFemaleAverageHeadPointy</li>
      <li>Furskin_BovineMaleAverageHeadNormal</li>
      <li>Furskin_BovineMaleAverageHeadWide</li>
      <li>Furskin_BovineMaleAverageHeadPointy</li>
      <li>Furskin_BovineFemaleAverageHeadNormal</li>
      <li>Furskin_BovineFemaleAverageHeadWide</li>
      <li>Furskin_BovineFemaleAverageHeadPointy</li>
    </forcedHeadTypes>
    <displayOrderInCategory>97</displayOrderInCategory>
    <symbolPack>
      <prefixSymbols>
        <li><symbol>bovine</symbol></li>
        <li><symbol>cattle</symbol></li>
        <li><symbol>cow</symbol></li>
      </prefixSymbols>
    </symbolPack>
  </GeneDef>

  <!-- Tail -->
  <GeneDef ParentName="GeneTailBase">
    <defName>Tail_Bovine</defName>
    <label>bovine tail</label>
    <description>Carriers of this gene grow a medium-length, bovine tail with a fluffy tip.</description>
    <iconPath>UI/Icons/Genes/Gene_BovineTail</iconPath>
    <iconColor>(0.75, 0.75, 0.75)</iconColor>
    <displayOrderInCategory>1000</displayOrderInCategory>
    <renderNodeProperties>
      <li>
        <workerClass>PawnRenderNodeWorker_AttachmentBody</workerClass>
        <texPath>Things/Pawn/Humanlike/BodyAttachments/Tails/BovineTail</texPath>
        <colorType>Skin</colorType>
        <overrideMeshSize>(1, 1)</overrideMeshSize>
        <parentTagDef>Body</parentTagDef>
        <rotDrawMode>Fresh, Rotting</rotDrawMode>
        <drawData>
          <scaleOffsetByBodySize>true</scaleOffsetByBodySize>
          <defaultData>
            <layer>-3</layer>
          </defaultData>
          <dataNorth>
            <offset>(0.1, 0, -0.35)</offset>
            <layer>90</layer>
          </dataNorth>
          <dataSouth>
            <offset>(-0.1, 0, -0.25)</offset>
          </dataSouth>
          <dataEast>
            <offset>(-0.5, 0, -0.15)</offset>
          </dataEast>
          <dataWest>
            <offset>(0.5, 0, -0.15)</offset>
          </dataWest>
        </drawData>
      </li>
      <li>
        <workerClass>PawnRenderNodeWorker_AttachmentBody</workerClass>
        <texPath>Things/Pawn/Humanlike/BodyAttachments/Tails/BovineTailTuft</texPath>
        <colorType>Hair</colorType>
        <overrideMeshSize>(1, 1)</overrideMeshSize>
        <parentTagDef>Body</parentTagDef>
        <rotDrawMode>Fresh, Rotting</rotDrawMode>
        <drawData>
          <scaleOffsetByBodySize>true</scaleOffsetByBodySize>
          <defaultData>
            <layer>-2</layer>
          </defaultData>
          <dataNorth>
            <offset>(0.1, -0, -0.35)</offset>
            <layer>180</layer>
          </dataNorth>
          <dataSouth>
            <offset>(-0.1, 0, -0.25)</offset>
          </dataSouth>
          <dataEast>
            <offset>(-0.5, 0, -0.15)</offset>
          </dataEast>
          <dataWest>
            <offset>(0.5, 0, -0.15)</offset>
          </dataWest>
        </drawData>
      </li>
    </renderNodeProperties>
  </GeneDef>

  <!-- Skintones -->

  <GeneDef ParentName="GeneSkinColorOverride">
    <defName>Skin_Earthy</defName>
    <label>earthy skin</label>
    <labelShortAdj>noir</labelShortAdj>
    <description>Carriers of this gene produce a pigment that turns their skin an earthy orange color.</description>
    <randomBrightnessFactor>0</randomBrightnessFactor>
    <skinColorOverride>(228, 158, 90)</skinColorOverride>
    <displayOrderInCategory>99</displayOrderInCategory>
  </GeneDef>

    <GeneDef ParentName="GeneSkinColorOverride">
    <defName>Skin_Chocolate</defName>
    <label>brown skin</label>
    <labelShortAdj>noir</labelShortAdj>
    <description>Carriers of this gene produce a pigment that turns their skin a brown color.</description>
    <randomBrightnessFactor>0</randomBrightnessFactor>
    <skinColorOverride>(130, 91, 48)</skinColorOverride>
    <displayOrderInCategory>99</displayOrderInCategory>
  </GeneDef>

    <GeneDef ParentName="GeneSkinColorOverride">
    <defName>Skin_Black</defName>
    <label>black skin</label>
    <labelShortAdj>noir</labelShortAdj>
    <description>Carriers of this gene produce a pigment that turns their skin charcoal black.</description>
    <randomBrightnessFactor>0</randomBrightnessFactor>
    <skinColorOverride>(99, 70, 36)</skinColorOverride>
    <displayOrderInCategory>99</displayOrderInCategory>
  </GeneDef>

  <!-- Other -->

</Defs>